{
  "name": "metropolis",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "docker:dev": "cp .env.development .env && docker-compose --env-file .env.development up -d || docker compose --env-file .env.development up -d",
    "docker:down": "docker-compose rm -fsv || docker compose rm -fsv && rm .env",
    "docker:test-up": "cp .env.test .env && docker-compose -f test/docker-compose.yml --env-file .env.test up -d || docker compose -f test/docker-compose.yml --env-file .env.test up -d",
    "docker:test-down": "docker-compose -f test/docker-compose.yml rm -fsv || docker compose -f test/docker-compose.yml rm -fsv && rm .env",
    "clean": "rimraf .next .swc",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test:api": "jest --testPathPattern=test/api --projects test/api/jest.api.config.js",
    "test:component": "jest --testPathPattern=test/component --projects test/component/jest.component.config.js",
    "test:gateway": "jest --testPathPattern=test/gateway --projects test/gateway/jest.gateway.config.js",
    "test:repository": "jest --testPathPattern=test/repository --projects test/repository/jest.repository.config.js",
    "test:sdk": "jest --testPathPattern=test/sdk --projects test/sdk/jest.sdk.config.js",
    "test": "jest --testPathPattern test/component test/api test/gateway test/repository test/sdk --projects test/api/jest.api.config.js test/component/jest.component.config.js test/repository/jest.repository.config.js test/gateway/jest.gateway.config.js test/sdk/jest.sdk.config.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-tailwind": "tailwindcss -i ./src/app/globals.css -o ./.storybook/tailwind.css",
    "build-tailwind:watch": "tailwindcss --watch -i ./src/app/globals.css -o ./.storybook/tailwind.css"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.14.13",
    "arangojs": "^8.6.0",
    "color": "^4.2.3",
    "colorcolor": "^3.0.1",
    "dotenv": "^16.3.1",
    "hsl-to-hex": "^1.0.0",
    "inversify": "^6.0.2",
    "iron-session": "^6.3.1",
    "next": "13.5.4",
    "react": "^18",
    "react-dom": "^18",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.5.3",
    "@storybook/nextjs": "^7.5.3",
    "@storybook/react": "^7.5.3",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@types/color": "^3.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10",
    "eslint": "^8",
    "eslint-config-next": "13.5.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-storybook": "^0.6.15",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "node-mocks-http": "^1.13.0",
    "postcss": "^8",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.5",
    "react-color-palette": "^7.1.0",
    "storybook": "^7.5.3",
    "tailwindcss": "^3",
    "typescript": "^5",
    "webpack": "^5.88.2"
  }
}
